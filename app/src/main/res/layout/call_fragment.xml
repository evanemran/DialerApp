<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="#2C3335"
        android:weightSum="6"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:weightSum="4">
                <TextView
                    android:id="@+id/tv"
                    android:layout_width="0dp"
                    android:textColor="#fff"
                    android:text=""
                    android:textSize="40sp"
                    android:padding="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2">

                </TextView>
                <ImageButton
                    android:id="@+id/bclear"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="#2C3335"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_backspace">

                </ImageButton>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/b1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="1"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="2"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="3"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/b4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="4"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="5"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="6"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/b7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="7"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="8"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="9"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">
                <Button
                    android:id="@+id/bstar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="*"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/b0"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="0"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>
                <Button
                    android:id="@+id/bhash"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="#000"
                    android:text="#"
                    android:textColor="#2ecc72"
                    android:layout_margin="3dp"
                    android:textSize="40sp"
                    android:layout_weight="1">

                </Button>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="3">
                <ImageButton
                    android:id="@+id/bcall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/custom_btn"
                    android:textColor="#fff"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_call_white"
                    android:textSize="30sp"
                    android:layout_weight="1">

                </ImageButton>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>